<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/main_tab_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_exam"
            style="@style/MMTabButton"
            android:checked="true"
            android:drawableTop="@drawable/tab_icon_home_selector"
            android:text="@string/exam" />

        <RadioButton
            android:id="@+id/rb_real_exam"
            style="@style/MMTabButton"
            android:drawableTop="@drawable/tab_icon_find_selector"
            android:text="@string/real_exam" />

        <RadioButton
            android:id="@+id/rb_online"
            style="@style/MMTabButton"
            android:drawableTop="@drawable/tab_icon_friend_selector"
            android:text="@string/online" />

        <RadioButton
            android:id="@+id/rb_user_center"
            style="@style/MMTabButton"
            android:drawableTop="@drawable/tab_icon_setting_selector"
            android:text="@string/user_center" />
    </LinearLayout>

</LinearLayout>