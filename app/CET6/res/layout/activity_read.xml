<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/read_parentlayout"
    android:layout_height="match_parent"
    android:background="#444"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/read_scrollview_content"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="@dimen/dimen_340_dip"
        android:paddingTop="@dimen/dimen_10_dip"
        android:paddingLeft="@dimen/dimen_10_dip"
        android:paddingRight="@dimen/dimen_10_dip"
         >

        <TextView
            android:id="@+id/read_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="
            
            
            
            " />
    </ScrollView>

    <LinearLayout
        android:layout_marginTop="@dimen/dimen_340_dip"
        android:background="#0f0"
        android:id="@+id/read_layout_pactice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
             >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dip"
            android:background="#000"
            android:orientation="vertical" />    
    <ScrollView
        android:background="#fff"
        android:id="@+id/read_scroll_pactice"
        android:paddingLeft="@dimen/dimen_10_dip"
        android:paddingRight="@dimen/dimen_10_dip"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
         >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                    android:id="@+id/read_question_layout"
				    android:layout_width="match_parent"
    				android:layout_height="match_parent"
    				android:orientation="vertical"/>
			<RelativeLayout
				    android:layout_width="match_parent"
    				android:layout_height="wrap_content"
    				android:orientation="vertical">
				<Button
			         android:id="@+id/submit_bt"
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:layout_alignParentRight="true"
			         android:layout_alignParentBottom="true"
			         android:text="答题" />
			     <Button
			         android:id="@+id/next_practice_bt"
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:layout_alignParentRight="true"
			         android:layout_alignParentTop="true"
			         android:layout_marginRight="@dimen/dimen_60_dip"
			         android:visibility="gone"
			         android:text="下一题" />

			     <Button
			         android:id="@+id/last_practice_bt"
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:layout_alignParentLeft="true"
			         android:layout_alignParentTop="true"
			         android:layout_marginRight="@dimen/dimen_60_dip"
			         android:visibility="gone"
			         android:text="上一题" />
			    
    		</RelativeLayout>		
            
            
        </LinearLayout>
    </ScrollView>
</LinearLayout>
    <Button
        android:id="@+id/scroll_bt"
        android:layout_width="@dimen/dimen_30_dip"
        android:layout_height="@dimen/dimen_30_dip"
        android:layout_marginTop="@dimen/dimen_325_dip"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_launcher" />

</RelativeLayout>
