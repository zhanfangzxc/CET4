<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_60_dip"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/select_iv"
            android:layout_width="@dimen/dimen_3_dip"
            android:layout_height="match_parent"
             android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_40_dip"
            android:text="技巧1"
            android:gravity="center"
            android:textColor="@color/blue_style1"
            android:textSize="16sp" />

      
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/listen_dashed_driver" />

</LinearLayout>