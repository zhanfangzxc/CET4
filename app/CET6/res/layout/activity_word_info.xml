<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/word_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_60_dip"
                    android:background="#f2f1ed"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/content_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_10_dip"
                        android:button="@drawable/checkbox"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >
                    </RelativeLayout>

                    <ImageButton
                        android:id="@+id/play_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dimen_5_dip"
                        android:background="@drawable/sound_btn" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/word_divider" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/comment_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dimen_10_dip"
                            android:layout_marginTop="@dimen/dimen_10_dip"
                            android:background="@drawable/word_info_bg"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <TextView
                                android:id="@+id/comment_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dimen_10_dip"
                                android:layout_marginLeft="@dimen/dimen_35_dip"
                                android:layout_marginRight="@dimen/dimen_20_dip"
                                android:layout_marginTop="@dimen/dimen_5_dip"
                                android:text="[释义]"
                                android:textSize="16sp"
                                android:visibility="visible" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/match_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_5_dip"
                            android:layout_marginRight="@dimen/dimen_10_dip"
                            android:layout_marginTop="@dimen/dimen_10_dip"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/word_info_bg1" >

                                <TextView
                                    android:id="@+id/word_match_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/dimen_35_dip"
                                    android:layout_marginTop="@dimen/dimen_10_dip"
                                    android:gravity="center_vertical"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/word_info_bg2"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/match_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/dimen_10_dip"
                                    android:layout_marginLeft="@dimen/dimen_35_dip"
                                    android:layout_marginRight="@dimen/dimen_20_dip"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_6_dip"
                                android:background="@drawable/word_info_bg3"
                                android:orientation="vertical" >
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/example_ll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dimen_5_dip"
                                android:layout_marginRight="@dimen/dimen_10_dip"
                                android:layout_marginTop="@dimen/dimen_10_dip"
                                android:orientation="vertical"
                                android:visibility="gone" >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/word_info_bg1" >

                                    <TextView
                                        android:id="@+id/word_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="@dimen/dimen_35_dip"
                                        android:layout_marginTop="@dimen/dimen_10_dip"
                                        android:gravity="center_vertical"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />
                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/word_info_bg2"
                                    android:orientation="vertical" >

                                    <TextView
                                        android:id="@+id/example_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/dimen_10_dip"
                                        android:layout_marginLeft="@dimen/dimen_35_dip"
                                        android:layout_marginRight="@dimen/dimen_20_dip"
                                        android:textSize="16sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dimen_6_dip"
                                    android:background="@drawable/word_info_bg3"
                                    android:orientation="vertical" >
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/word_dased_dirver" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dimen_10_dip"
                android:layout_marginTop="@dimen/dimen_10_dip" >

                <ImageButton
                    android:id="@+id/fuzzy_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_15_dip"
                    android:background="@drawable/word_fuzzy_btn" />

                <ImageButton
                    android:id="@+id/know_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/fuzzy_btn"
                    android:background="@drawable/word_know_btn" />

                <ImageButton
                    android:id="@+id/previous_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_15_dip"
                    android:background="@drawable/word_previous_btn"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/next_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/previous_btn"
                    android:background="@drawable/word_next_btn"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>