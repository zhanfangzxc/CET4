<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#deedcf"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <ImageView
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:src="@drawable/practice_jag_down" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_marginLeft="@dimen/dimen_18_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/analysis_title" />

        <ImageButton
            android:id="@+id/practice_vedio_study"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/explain_btn" />
        
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/resolv_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_28_dip"
        android:paddingLeft="@dimen/dimen_46_dip"
        android:paddingRight="@dimen/dimen_30_dip"
        android:paddingBottom="@dimen/dimen_30_dip"
        android:background="@drawable/optioncomment_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10_dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/answer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[答案] :"
                android:layout_centerVertical="true"
                android:textColor="@color/orange_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/answer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:textColor="#555"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/answer_title"
                android:layout_marginLeft="@dimen/dimen_3_dip"
                android:textSize="14sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_6_dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/resolve_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[解析] :"
                android:textColor="@color/orange_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/resolve_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#555"
                android:layout_marginLeft="@dimen/dimen_3_dip"
                android:text="adsg kofsh  kjfjka ljgdsgssdgsdg igdgs ifosfs! "
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>