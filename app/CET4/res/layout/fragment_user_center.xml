<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10_dip" >

    <LinearLayout
        android:id="@+id/username_lt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/couple_back"
        android:padding="@dimen/dimen_10_dip" >

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yingshibao@163.com"
            android:textColor="#666"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/download_manage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/couple_back"
        android:padding="@dimen/dimen_10_dip" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/downloadmanager" />

        <TextView
            android:id="@+id/download_manage_tv"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_5_dip"
            android:text="本地音视频"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/couple_flag" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_couple_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/couple_back"
        android:padding="@dimen/dimen_10_dip" >
		<ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/coupleback" />
        <TextView
            android:id="@+id/user_couple_back_tv"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:paddingLeft="@dimen/dimen_5_dip"
            android:layout_height="wrap_content"
            android:text="用户反馈"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/couple_flag" />
    </LinearLayout>


</LinearLayout>