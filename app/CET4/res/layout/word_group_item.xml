<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/group_item_layout"
        android:layout_marginTop="@dimen/dimen_5_dip"
        android:layout_marginBottom="@dimen/dimen_5_dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/word_lock_bg" >

        <LinearLayout
            android:id="@+id/group_num_layout"
            android:layout_width="@dimen/dimen_15_dip"
            android:layout_height="@dimen/dimen_15_dip"
            android:layout_marginLeft="@dimen/dimen_5_dip"
            android:layout_marginTop="@dimen/dimen_5_dip"
            android:background="@drawable/word_group_bg"
            android:gravity="center" >

            <TextView
                android:id="@+id/groupnum_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="10sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/progress_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共30词"
                android:textColor="@color/shadow"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/progress_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进度：12/30"
                android:textColor="@color/shadow"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
